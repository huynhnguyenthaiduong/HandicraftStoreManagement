@page
@model HandicraftSMng_HuynhNgThaiDuong_SE171581.Pages.RegisterModel
@{
    ViewData["Title"] = "Register page";
}

<div class="row">
    <div class="col-lg-6 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Register</h2>

        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">UserName*</label>
                <div class="col-sm-8">
                    <span asp-validation-for="RegisteredAcc.UserName" class="text-danger"></span>
                    <input class="form-control" type="text" placeholder="Enter UserName" asp-for="RegisteredAcc.UserName" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Password*</label>
                <div class="col-sm-8">
                    <span asp-validation-for="RegisteredAcc.Password" class="text-danger"></span>
                    <input class="form-control" type="password" placeholder="Enter Password" asp-for="RegisteredAcc.Password" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">FullName</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" placeholder="Enter FullName" asp-for="RegisteredAcc.FullName" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email*</label>
                <div class="col-sm-8">
                    <span asp-validation-for="RegisteredAcc.Email" class="text-danger"></span>
                    <input class="form-control" type="text" placeholder="Enter Email" asp-for="RegisteredAcc.Email" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Gender</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="RegisteredAcc.Gender">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">PhoneNumber</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" placeholder="Enter Phone Number" asp-for="RegisteredAcc.PhoneNumber" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Address</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" placeholder="Enter Address" asp-for="RegisteredAcc.Address" />
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4" col-sm-8>
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>
