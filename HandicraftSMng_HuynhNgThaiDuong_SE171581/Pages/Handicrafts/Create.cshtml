@page
@model HandicraftSMng_HuynhNgThaiDuong_SE171581.Pages.Handicrafts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 style="text-align: center; margin-bottom: 7%">Create Handicraft</h1>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form method="post" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-sm-6" style="margin-bottom: 5%">
                <label asp-for="Handicraft.HandicraftCategoryId" class="control-label" style="font-weight:bold"></label>
                <select asp-for="Handicraft.HandicraftCategoryId" class ="form-control" asp-items="ViewBag.HandicraftCategory"></select>
            </div>
            <div class="form-group col-sm-6" style="margin-bottom: 5%">
                <label asp-for="Handicraft.HandicraftName" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Handicraft.HandicraftName" class="form-control" />
                <span asp-validation-for="Handicraft.HandicraftName" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6" style="margin-bottom: 5%">
                <label asp-for="Handicraft.Description" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Handicraft.Description" class="form-control" />
                <span asp-validation-for="Handicraft.Description" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6" style="margin-bottom: 5%">
                <label asp-for="Handicraft.OriginalSource" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Handicraft.OriginalSource" class="form-control" />
                <span asp-validation-for="Handicraft.OriginalSource" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6" style="margin-bottom: 5%">
                <label asp-for="Handicraft.Material" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Handicraft.Material" class="form-control" />
                <span asp-validation-for="Handicraft.Material" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6" style="margin-bottom: 5%">
                <label asp-for="Handicraft.Price" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Handicraft.Price" class="form-control" />
                <span asp-validation-for="Handicraft.Price" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6" style="margin-bottom: 5%">
                <label asp-for="Handicraft.Quantity" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Handicraft.Quantity" class="form-control" />
                <span asp-validation-for="Handicraft.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group form-check col-sm-7  " style="margin-bottom: 5%">
                <label class="control-label" style="margin-right:10%; font-weight:bold">
                    @Html.DisplayNameFor(model => model.Handicraft.Status)
                </label>

                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Handicraft.Status" /> 
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> | <a class="btn btn-secondary" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
